<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.exotically">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Exotically">
        <activity android:name=".MatchesActivity"></activity>
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ProfileSetupActivity" /> <!-- A C C O U N T -->
        <activity android:name=".LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".LandingActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:parentActivityName=".LandingActivity" /> <!-- M A I N -->
        <activity android:name=".MainActivity" />
    </application>

</manifest>